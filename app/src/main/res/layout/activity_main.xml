<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

   <data>
       <variable
           name="vm"
           type="com.example.weatherforcastapp.mvvm.WeatherVm"/>
   </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackblue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackblue"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/materialcard"
                    android:backgroundTint="#80A9A9A9"
                    android:layout_margin="16dp"
                    app:cardElevation="20dp">
                    <!--style="@style/CustomerCardViewStyle">-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.SearchView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/searchView"
                            android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/search_src_text"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"

                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:id="@+id/imageMain"
                                android:layout_gravity="center"
                                 android:outlineProvider="bounds"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tempMain"
                                android:layout_gravity="center"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="60sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/descMain"
                                android:layout_gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="25sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dateDayMain"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:textColor="@android:color/white"
                                android:textSize="18dp"
                                android:textStyle="italic"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="4dp"
                                android:orientation="horizontal">
                            <!--colum 1-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/mainRainl"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/rain"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/chanceofrain"
                                    android:layout_gravity="center"
                                    android:text="10%"
                                    android:textColor="@android:color/white"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Chance of Rain"
                                    android:textColor="@android:color/white"/>

                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:background="@android:color/darker_gray"/>

                            <!--Column2-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:id="@+id/mainWindspeed"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/wind"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/windspeed"
                                        android:layout_gravity="center"
                                        android:text="10%"
                                        android:textColor="@android:color/white"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Wind Speed"
                                        android:textColor="@android:color/white"/>

                                </LinearLayout>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:background="@android:color/darker_gray"/>


                                <!--Column3-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"

                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/humidity"/>
                                    <!--  android:id="@+id/mainHumidity"-->

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/humidityMain"
                                        android:layout_gravity="center"
                                        android:text="10%"
                                        android:textColor="@android:color/white"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Humidity"
                                        android:textColor="@android:color/white"/>

                                </LinearLayout>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:background="@android:color/darker_gray"/>

                            </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


              <!--  </com.google.android.material.card.MaterialCardView>-->

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/materialcard"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="Today Forcast"
                           android:textColor="@color/white"
                           android:textSize="18sp"
                           android:textStyle="bold"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/next5Days"
                           android:drawablePadding="6dp"
                           android:text="5 Days"
                           android:layout_marginRight="10dp"
                           android:textColor="@color/white"
                           android:textSize="16sp"
                           android:textStyle="bold"/>
                   </LinearLayout>

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="16dp"
                       app:cardElevation="20dp"
                       android:backgroundTint="#80A9A9A9"

                       app:cardCornerRadius="20dp">
                       <androidx.recyclerview.widget.RecyclerView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:id="@+id/forecastRecyclerView"
                           android:layout_margin="10dp"
                           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                           android:orientation="vertical"/>
                   </androidx.cardview.widget.CardView>

               </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>





</layout>